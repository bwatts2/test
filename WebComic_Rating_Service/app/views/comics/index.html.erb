<h1>Listing comics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Url</th>
      <th>Synopsis</th>
      <th>Genre</th>
      <th>Rating art</th>
      <th>Rating story</th>
      <th>Rating overall</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.name %></td>
        <td><%= comic.author %></td>
        <td><%= comic.url %></td>
        <td><%= comic.synopsis %></td>
        <td><%= comic.genre %></td>
        <td><%= comic.rating_art %></td>
        <td><%= comic.rating_story %></td>
        <td><%= comic.rating_overall %></td>
        <td><%= link_to 'Show', comic %></td>
        <td><%= link_to 'Edit', edit_comic_path(comic) %></td>
        <td><%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

